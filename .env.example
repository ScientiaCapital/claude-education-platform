# Claude Education Platform Environment Configuration
# Copy this file to .env and fill in your API keys

# Required API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DATABASE_URL=postgresql://user:password@host/database
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Optional API Keys (enhance functionality but not required)
EXA_API_KEY=your_exa_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Frontend Configuration (for Next.js)
# Set to 'true' to use Python backend, 'false' to use direct AI integration
USE_PYTHON_BACKEND=true
PYTHON_API_URL=http://localhost:8000

# Optional: OpenAI API key for frontend fallback
OPENAI_API_KEY=your_openai_api_key_here

# Neon Database Configuration (if using Neon)
NEON_PROJECT_ID=your_neon_project_id_here